{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="span3">
                {% include 'UserBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
            </div>
            <div class="span9">
                <h2>Details du contact</h2>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th>Email</th>
                                <td>{{ contact.email }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td><address>{{ contact.adresse }}</address></td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td>{{ contact.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Siteweb</th>
                                <td><a href="{{contact.siteweb}}">{{contact.siteweb}}</a></td>
                            </tr>
                            </tbody>
                        </table>

                        <ul class="nav nav-list">
                            <li>
                                <a href="{{ path('contacts_index') }}">Retour Ã  la liste<i class="icon-arrow-left"></i></a>
                            </li>
                            <li>
                                <a href="{{ path('contacts_edit', { 'id': contact.id }) }}">Modifier<i class="icon-edit"></i></a>
                            <li>
                                {{ form_start(delete_form) }}
                                    <input class="btn btn-primary" type="submit" value="Supprimer">
                                {{ form_end(delete_form) }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
