{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="span3">
                {% include 'UserBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
            </div>
            <div class="span9">
                <h2>Liste des contacts</h2>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Email</th>
                                <th>Adresse</th>
                                <th>Telephone</th>
                                <th>Siteweb</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for contact in contacts %}
                                <tr>
                                    <td>{{ contact.email }}</td>
                                    <td>{{ contact.adresse }}</td>
                                    <td>{{ contact.telephone }}</td>
                                    <td><a href="{{contact.siteweb}}">{{contact.siteweb}}</a></td>
                                    <td>
                                        <a href="{{ path('contacts_edit', { 'id': contact.id }) }}"><i class="icon-edit" title="Modifier"></i></a>
                                        <a href="{{ path('contacts_show', { 'id': contact.id }) }}"><i class="icon-list" title="Afficher Details"></i></a>
                                        <a href="{{ path('create_user', { 'id': contact.id }) }}"><i class="icon-plus" title="Ajouter aux utilisateurs"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <ul class="nav nav-list">
                            <li>
                                <a href="{{ path('contacts_new') }}"><i class="icon-plus"></i> Nouveau contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}